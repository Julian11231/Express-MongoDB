<%- include('partials/header'); -%>
    <div class="container-fluid">
        <h2 class="text-center mb-5">Administración tiendas</h2>
        <div class="row">
            <!-- FORM-->
            <div class="col-md-4">
                <div class="card shadow">
                    <div class="card-header bg-dark text-light font-weight-bold">Agregar Tienda</div>
                    <div class="card-body">
                        <form action="../tiendas/add" method="post">
                            <div class="form-group">
                                <input class="form-control" type="text" name="nit" placeholder="NIT" required>
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="nombreTienda" placeholder="Nombre de la tienda" required>
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="direccionTienda" placeholder="Dirección de la tienda" required>
                            </div>
                            <button class="btn btn-primary" type="submit">Agregar</button>
                        </form>
                    </div>
                </div>
            </div>
            <!--LIST -->
            <div class="col-md-8">
                <table class="table table-hover text-center shadow">
                    <thead class="thead-dark">
                        <tr>
                            <th>NIT</th>
                            <th>Nombre</th>
                            <th>Dirección</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0; i < tiendas.length; i++) { %>
                            <form action="../tiendas/edit/<%=tiendas[i]._id %>" method="post">
                                <tr>
                                    <td>
                                        <div class="form-group">
                                            <input class="form-control-plaintext" type="text" name="nit" value="<%=tiendas[i].nit%>" placeholder="<%=tiendas[i].nit%>" disabled>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <input class="form-control" type="text" name="nombreTienda" value="<%=tiendas[i].nombreTienda%>" placeholder="<%=tiendas[i].nombreTienda%>" required>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <input class="form-control" type="text" name="direccionTienda" value="<%= tiendas[i].direccionTienda%>" placeholder="<%= tiendas[i].direccionTienda%>" required>
                                        </div>
                                    </td>
                                    <td>
                                        <button type="submit " class="btn btn-info"><i class='fas fa-edit'></i></button>
                                        <a href="../tiendas/delete/<%= tiendas[i]._id %>" class="btn btn-danger"><i class='fas fa-trash'></i></a>
                                    </td>
                                </tr>
                            </form>
                            <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%- include('partials/footer'); -%>